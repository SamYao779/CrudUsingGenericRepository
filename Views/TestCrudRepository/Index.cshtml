@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>
<a href="@Url.Action("Add")" class="btn-default btn btn-modal">Add Item</a><br /><br />
<table class="table table-bordered">
    <thead>
        <tr class="active">
            <th>Id</th>
            <th>First Name</th>
            <th>Lasat Name</th>
            <th>Address</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Address</td>
                <td>@p.Email</td>
                <td><a href="@Url.Action("Edit", new { id = p.Id })" class="btn btn-default btn-modal">Edit</a></td>
                <td><a href="@Url.Action("ConfirmDelete", new { id = p.Id })" class="btn btn-danger btn-modal">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">

    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $(".btn-modal").click(function (e) {
                e.preventDefault();

                var href = $(this).attr('href');
                $(".modal-dialog").load(href, function () {
                    $("#myModal").modal('show');
                });
            });
        });
    </script>
}